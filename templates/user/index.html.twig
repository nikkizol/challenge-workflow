{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <div class="container">
        <h1>User index</h1>

        <table class="table table-striped table-hover">
            <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
{#                <th>Password</th>#}
                <th>FirstName</th>
                <th>LastName</th>
                <th>IsVerified</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
{#                    <td>{{ user.password }}</td>#}
                    <td>{{ user.firstName }}</td>
                    <td>{{ user.lastName }}</td>
                    <td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
                    <td>
                        <a class="btn btn-outline-info" href="{{ path('user_show', {'id': user.id}) }}">Show</a>
                        <a class="btn btn-outline-primary" href="{{ path('user_edit', {'id': user.id}) }}">Edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="8">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a class="btn btn-primary" href="{{ path('user_new') }}">Create new</a>
        <a class="btn btn-outline-info" href="{{ path('manager') }}">Dashboard</a>
    </div>
{% endblock %}
