            </tbody>
        </table>

        <div class="mb-2">
            <a class="btn btn-outline-primary" href="{{ path('ticket_index') }}">back to list</a>

            <a class="btn btn-outline-primary" href="{{ path('ticket_edit', {'id': ticket.id}) }}">edit</a>
