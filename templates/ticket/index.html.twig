{% extends 'base.html.twig' %}

{% block title %}Ticket index{% endblock %}

{% block body %}
    <div class="container">
        <h1>Ticket index</h1>

        <table class="table table-striped table-hover">
            <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>Datetime</th>
                <th>Status</th>
                <th>Priority</th>
                <th>Order</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>
            {% for ticket in tickets %}
                <tr>
                    <td>{{ ticket.id }}</td>
                    <td>{{ ticket.datetime ? ticket.datetime|date('Y-m-d H:i:s') : '' }}</td>
                    <td>{{ ticket.status }}</td>
                    <td>{{ ticket.priority }}</td>
                    <td>{{ ticket.customerOrder }}</td>
                    <td>
                        <a class="btn btn-outline-info" href="{{ path('ticket_show', {'id': ticket.id}) }}"> Show</a>
                        <a class="btn btn-outline-primary" href="{{ path('ticket_edit', {'id': ticket.id}) }}"> Edit</a>
                        <a class="btn btn-outline-secondary" href="{{ path('comment_index', {'id': ticket.id}) }}">Display comments</a>
{#                        <a class="btn btn-outline-secondary" href="{{ path('comment_new', {'id': ticket.id}) }}">Leave a comment</a>#}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a class="btn btn-primary" href="{{ path('ticket_new') }}">Create new</a>
    </div>
{% endblock %}
